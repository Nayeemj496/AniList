<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="https://anilist.co/img/icons/favicon-32x32.png"
    />
    <title>Search Anime &#183; AniList</title>
    <link rel="stylesheet" href="/styles/anime.css" />
    <style>
      .a-style {
        text-decoration: none;
        color: #a0b1c5;
        font-size: 14px;
      }

      .section-headline {
        font-size: 16px;
        color: #ADC0D2;
        margin-bottom: 20px;
        margin: 40px auto;
        margin-bottom: 0px;
        padding: 0px 30px;
        max-width: 1150px;
        font-weight: 500;
      }

      .grid-wrapper {
        margin: 0px auto;
      }
    </style>
  </head>

  <body>
    <%- include("navcontainer.ejs", { isAdmin, userimage, username }) %>

    <form action="/search/anime" method="post">
      <div class="filters">
        <div class="filter">
          <div class="name">Search</div>
          <div class="search-wrap">
            <img
              src="/svgs/icons8-search.svg"
              alt=""
              width="15px"
              height="15px"
              style="opacity: 0.5; align-self: center"
            />
            <input
              type="text"
              id="anime-search"
              name="name"
              style="width: 118px"
            />
          </div>
        </div>

        <div class="filter">
          <div class="name">Genres</div>
          <div class="select">
            <input
              type="text"
              id="anime-genre"
              name="genre"
              placeholder="Any"
            />
          </div>
        </div>

        <div class="filter">
          <div class="name">Year</div>
          <div class="select">
            <input type="text" id="anime-year" name="year" placeholder="Any" />
          </div>
        </div>

        <div class="filter">
          <div class="name">Season</div>
          <div class="select">
            <input
              type="text"
              id="anime-season"
              name="season"
              placeholder="Any"
            />
          </div>
        </div>

        <div class="filter">
          <div class="name">Format</div>
          <div class="select">
            <input
              type="text"
              id="anime-format"
              name="format"
              placeholder="Any"
            />
          </div>
        </div>

        <button class="form-button filter" type="submit">Filter</button>
      </div>
    </form>

