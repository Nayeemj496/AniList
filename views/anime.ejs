      <h2 class="section-headline">ALL TIME POPULAR</h2>
      <div class="results-grid-container">
        <div class="media-card">
          <img class="media-card-image" src="" alt=""/>
          <a
            href=""
            class="media-card-title"
            data-hover-color=""
            style="text-decoration: none"
          >
            
          </a>
      </div>


      </div>
    </div> -->

    <% let length=Object.keys(search).length %> <% if(length> 0) { %> <%
    if(animes.length===0) { %>
    <div class="no-results">No Results</div>
    <% } else { %>
    <div class="results-grid-container">
      <% animes.forEach((anime)=> { %>
      <div class="media-card">
        <img class="media-card-image" src="<%= anime.COVER_IMAGE %>" alt="" />
        <a
          href="/anime/<%= anime.ANIME_ID %>/<%= anime.ENGLISH %>"
          class="media-card-title"
          data-hover-color="<%= anime.COVER_IMAGE_COLOR %>"
          style="text-decoration: none"
        >
          <%= anime.ENGLISH %>
        </a>
      </div>
      <% }); %>
    </div>
    <% } %> <% } else { %>
    <div class="results-grid-container">
      <% animes.forEach((anime)=> { %>
      <div class="media-card">
        <img class="media-card-image" src="<%= anime.COVER_IMAGE %>" alt="" />
        <a
          href="/anime/<%= anime.ANIME_ID %>/<%= anime.ENGLISH %>"
          class="media-card-title"
          data-hover-color="<%= anime.COVER_IMAGE_COLOR %>"
          style="text-decoration: none"
        >
          <%= anime.ENGLISH %>
        </a>
      </div>
      <% }); %>
    </div>
    <% } %>

    <script src="/scripts/tooltip.js"></script>
  </body>
</html>
